<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import opintoapp.domain.*?>

<GridPane fx:controller="opintoapp.ui.WelcomeSceneController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <padding>
        <Insets top="25" right="25" bottom="10" left="25"/>
    </padding>

    <HBox spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="0">
        <Text fx:id="actionTarget"/>
    </HBox>

    <Text text="You can add courses here" GridPane.columnIndex="2" GridPane.rowIndex="2"/>

    <GridPane GridPane.columnIndex="2" GridPane.rowIndex="3" hgap="10" vgap="10">
        <padding>
            <Insets top="15" right="15" bottom="10" left="15"/>
        </padding>
        <Label text="Course name"
               GridPane.columnIndex="2" GridPane.rowIndex="3"/>
        <TextField fx:id="courseName" GridPane.columnIndex="3" GridPane.rowIndex="3"/>

        <Label text="Credits"
               GridPane.columnIndex="2" GridPane.rowIndex="4"/>
        <ChoiceBox fx:id="creditBox"
                   GridPane.columnIndex="3" GridPane.rowIndex="4">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="0"/>
                    <String fx:value="3"/>
                    <String fx:value="5"/>
                    <String fx:value="10"/>
                </FXCollections>
            </items>
        </ChoiceBox>

        <Label text="Grade"
               GridPane.columnIndex="2" GridPane.rowIndex="5"/>
        <ChoiceBox fx:id="gradeBox"
                   GridPane.columnIndex="3" GridPane.rowIndex="5">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="0"/>
                    <String fx:value="1"/>
                    <String fx:value="2"/>
                    <String fx:value="3"/>
                    <String fx:value="4"/>
                    <String fx:value="5"/>
                </FXCollections>
            </items>
        </ChoiceBox>

        <Button text="Add Course" onAction="#handleAddCourse"
                GridPane.columnIndex="3" GridPane.rowIndex="6"/>
    </GridPane>


    <TableView fx:id="tableView" 
               GridPane.columnIndex="0" GridPane.rowIndex="3">
        <columns>
            <TableColumn text="Course">
                <cellValueFactory>
                    <PropertyValueFactory property="name" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Credits">
                <cellValueFactory>
                    <PropertyValueFactory property="points" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Grade">
                <cellValueFactory>
                    <PropertyValueFactory property="grade" />
                </cellValueFactory>
            </TableColumn>
        </columns>
        <items>
            <FXCollections fx:factory="observableArrayList">
            </FXCollections> 
        </items>
        
    </TableView>
    
    <Text fx:id="average" GridPane.columnIndex="0" GridPane.rowIndex="7" />
    <Text fx:id="totalCredits" GridPane.columnIndex="0" GridPane.rowIndex="8" />

    <HBox spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="10">
        <Button text="log out" onAction="#handleLogOut"/>
    </HBox>

</GridPane>